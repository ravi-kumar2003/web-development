        <h1>Temperature Conversion</h1>
        


        <label for="celsius">Celsius To Faherenheit:</label>
        <input type="number" id="celsius" placeholder="Enter temperature in Celsius">
        <br>
        <button onclick="convertToFahrenheit()">Convert to Fahrenheit</button>
        <br>
        <br>
        <div id="result1"></div>

        <br>
        <br>
        <label for="fahrenheit">Fahrenheit To celsius:</label>
        <input type="number" id="fahrenheit" placeholder="Enter temperature in Fahrenheit">
        <br>
        <button onclick="convertToCelsius()">Convert to Celsius</button>
        <br>
        <br>
        <div id="result2"></div>

        <br>
        <br>        
        <label for="celsius2">Celsius To Kelvin:</label>
        <input type="number" id="celsius2" placeholder="Enter temperature in Celsius">
        <br>
        <button onclick="convertTokelvin()">Convert to Celsius</button>
        <br>
        <br>
        <div id="result3"></div>


        <br>
        <br>
        <label for="celsius1">Kelvin to celcius:</label>
        <input type="number" id="celsius1" placeholder="Enter temperature in Kelvin">
        <br>
        <button onclick="convertToCelsius1()">Convert to Celsius</button>
        <br>
        <br>
        <div id="result4"></div>
    </div>

    <script>
        
        function convertToFahrenheit() {
            const celsius = parseFloat(document.getElementById("celsius").value);
            const fahrenheit = (celsius * 9/5) + 32;
            document.getElementById("result1").textContent = `Fahrenheit: ${fahrenheit.toFixed(2)}째F`;
        }
        
        function convertToCelsius() {
            const fahrenheit = parseFloat(document.getElementById("fahrenheit").value);
            const celsius = (fahrenheit - 32) * 5/9;
            document.getElementById("result2").textContent = `Celsius: ${celsius.toFixed(2)}째C`;
        }
        
        function convertTokelvin() {
            const celsius2 = parseFloat(document.getElementById("celsius2").value);
            const kelvin= (celsius2 +273);
            document.getElementById("result3").textContent = `Kelvin: ${kelvin.toFixed(2)}째k`;
        }

        function convertToCelsius1() {
            const celsius1 = parseFloat(document.getElementById("celsius1").value);
            const kelvin = (celsius1-273);
            document.getElementById("result4").textContent = `kelvin: ${kelvin.toFixed(2)}째C`;
        }
    </script>
